{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/*"]
    },
    "rootDirs": ["src"]
  },
  "path-intellisense.mappings": {
    "@/*": "${workspaceRoot}/src/renderer/*"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/node_modules/*"]
}
